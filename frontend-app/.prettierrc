{
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 120,
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "svelteSortOrder": "options-styles-scripts-markup",
        "svelteStrictMode": true,
        "svelteBracketNewLine": false,
        "svelteAllowShorthand": false,
        "svelteIndentScriptAndStyle": true
      }
    }
  ]
}
